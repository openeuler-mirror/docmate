{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./out",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "ES2022"
    ],
    "types": [
      "vscode",
      "node",
      "mocha"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "src/test/**/*"
  ],
  "references": [
    {
      "path": "../shared"
    },
    {
      "path": "../utils"
    }
  ]
}